{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": [
      ".yarn/**",
      "**/.gitignore",
      "**/.next/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {},
    "ignore": [
      ".yarn/**",
      "**/.gitignore",
      "**/.dist/**",
      "**/.dfx/**",
      "**/declarations/**"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  }
}